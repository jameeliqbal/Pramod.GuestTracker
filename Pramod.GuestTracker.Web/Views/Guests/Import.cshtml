@model Pramod.GuestTracker.Web.Models.Guest

@{
    ViewBag.Title = "Import";
}

<h2>Import</h2>


@using (Html.BeginForm("Import","Guests", FormMethod.Post, new { enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Guest</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Guest List in CSV format:", htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            <input type="file" name="csvFile" class="form-control" required />

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-10">
            <input type="submit" value="Import" class="btn btn-lg btn-primary" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
